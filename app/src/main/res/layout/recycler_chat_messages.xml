<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">
    <LinearLayout
        android:id="@+id/left_chat_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:padding="8dp"
        android:background="@drawable/text_background_rounded_corners"
        android:backgroundTint="@color/message_color_receiver">
        <TextView
            android:id="@+id/left_text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@android:color/white">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/right_chat_layout"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:padding="8dp"
        android:background="@drawable/text_background_rounded_corners"
        android:backgroundTint="@color/message_color_sender">
        <TextView
            android:id="@+id/right_text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@android:color/white">
        </TextView>
    </LinearLayout>
</RelativeLayout>