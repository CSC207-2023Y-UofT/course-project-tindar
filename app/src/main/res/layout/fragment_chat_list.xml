<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorPrimary">
        <TextView
            android:id="@+id/conversation_partner_display_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Conversations"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_toEndOf="@id/back_button"
            />
        <ImageButton
            android:id="@+id/back_button"
            android:background="@android:color/transparent"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_arrow_back_32_white"
            />

    </RelativeLayout>




        <androidx.recyclerview.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/recycle_view_convo_list"
        android:name="com.courseproject.tindar.ui.chat.chatsFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"

        app:layoutManager="LinearLayoutManager"
        tools:context=".ui.chats.ConvoFragment"
        tools:listitem="@layout/fragment_chats" />

</RelativeLayout>
